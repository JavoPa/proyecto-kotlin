<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etTipoVacuna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de Vacuna"
        android:inputType="text" />

    <EditText
        android:id="@+id/etFechaAplicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de Aplicación (AAAA-MM-DD)"
        android:inputType="date" />

    <EditText
        android:id="@+id/etProximaDosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Próxima Dosis (AAAA-MM-DD)"
        android:inputType="date" />

    <Button
        android:id="@+id/btnGuardarVacuna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar" />

</LinearLayout>
